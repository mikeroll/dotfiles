{
    //
    // UI
    //
    "window.menuBarVisibility": "hidden",
    "workbench.colorTheme": "GitHub Light",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#695d6940",
        "terminal.foreground": "#24292e",
        "terminalCursor.background": "#24292e",
        "terminalCursor.foreground": "#24292e",
        "terminal.selectionBackground": "#c8e1ff",
        "terminal.ansiBlack": "#24292e",
        "terminal.ansiBrightBlack": "#6a737d",
        "terminal.ansiRed": "#cb2431",
        "terminal.ansiBrightRed": "#d73a49",
        "terminal.ansiGreen": "#22863a",
        "terminal.ansiBrightGreen": "#28a745",
        "terminal.ansiYellow": "#e36209",
        "terminal.ansiBrightYellow": "#f9c513",
        "terminal.ansiBlue": "#005cc5",
        "terminal.ansiBrightBlue": "#2188ff",
        "terminal.ansiMagenta": "#6f42c1",
        "terminal.ansiBrightMagenta": "#8a63d2",
        "terminal.ansiCyan": "#d03592",
        "terminal.ansiBrightCyan": "#ea4aaa",
        "terminal.ansiWhite": "#586069",
        "terminal.ansiBrightWhite": "#f6f8fa",
    },
    "explorer.openEditors.visible": 10,
    "workbench.editor.showTabs": true,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.settings.editor": "json",
    "editor.smoothScrolling": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "debug.toolBarLocation": "docked",
    "breadcrumbs.enabled": true,
    "window.titleBarStyle": "native",
    "scm.defaultViewMode": "tree",
    "search.useGlobalIgnoreFiles": true,
    "extensions.ignoreRecommendations": true,
    //
    // Terminal
    //
    "terminal.external.osxExec": "iTerm.app",
    "terminal.external.linuxExec": "termite",
    "terminal.explorerKind": "external",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "Iosevka",
    "debug.console.fontFamily": "Iosevka",
    "debug.console.fontSize": 14,
    //
    // Editor
    //
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.dragAndDrop": false,
    "editor.fontFamily": "Iosevka",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontWeight": "400",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "selection",
    "editor.roundedSelection": false,
    "editor.rulers": [
        80,
        120
    ],
    "editor.bracketPairColorization.enabled": false,
    "editor.suggest.preview": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": false,
    "diffEditor.ignoreTrimWhitespace": false,
    //
    // Git
    //
    "git.autofetch": true,
    "git.confirmSync": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false
    },
    "gitlens.blame.avatars": false,
    "gitlens.blame.format": "${author|16?} ${agoOrDate|14-}",
    "gitlens.blame.heatmap.location": "left",
    "gitlens.blame.separateLines": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    //
    // Python
    //
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.venvPath": "~/code/.virtualenvs",
    "python.terminal.activateEnvironment": false,
    "python.sortImports.args": [
        "--settings-path",
        "${workspaceFolder}"
    ],
    //
    // JS
    //
    "javascript.format.enable": false,
    "javascript.validate.enable": false,
    //
    // Go
    //
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "go.gopath": "~/code/go",
    //
    // Syntax-specific
    //
    "files.exclude": {
        // Python
        "**/*.pyc": true,
        "**/__pycache__": true,
        ".idea": true,
        ".mypy_cache": true,
        ".pytest_cache": true,
        ".tox": true,
    },
    "files.associations": {
        "*.jenkinsfile": "groovy",
        "Vagrantfile": "ruby",
        "Pipfile": "toml"
    },
    "[haskell]": {
        "editor.fontLigatures": "'HSKL'"
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        "editor.formatOnPaste": false,
        "editor.rulers": [
            88
        ]
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "[dockerfile]": {
        "editor.formatOnSave": false,
    },
    "[terraform]": {
        "editor.formatOnType": false,
        "editor.codeLens": false
    },
    "shellcheck.ignorePatterns": {
        "**/*.zsh": true,
        "**/.zsh*": true,
        "**/.zprofile": true,
        "**/.envrc": true,
    },
    //
    // Project Manager
    //
    "projectManager.git.baseFolders": [
        "$home/dotfiles",
        "$home/code",
        "$home/work"
    ]
}
